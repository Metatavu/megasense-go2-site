---
import PageLayout from "@layouts/PageLayout.astro";
import Section from "@components/Section.astro";
import { Image } from "astro:assets";
import scienceHeroImage from "@images/science-hero-image.png";
import AvailabilityCard from "@components/AvailabilityCard.astro";
import SubscriptionOptionsCard from "@components/SubscriptionOptionsCard.astro";

---

<PageLayout title="GO2 - Pricing and availability">
  <Section
    id="pricing-page"
    className="pb-10 bg-go2-blue-light"
  >
	</Section>
  <Section
		id="pricing"
		className="bg-go2-blue-light"
	>
  <!-- TODO: update image -->
		<Image
			src={scienceHeroImage}
			alt="Science illustration placeholder"
			class="w-full max-w-none max-h-hero-image"
		/>
		<h3 class="text-2xl">
			Pricing and availability
		</h3>
		<div class="flex flex-col gap-4">
			<p class="text-center">Ut enim ad minim veniam, quis nostrud. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquid.</p>
		</div>
	</Section>
  <Section
    id="availability-2"
    className="bg-go2-blue-light"
  >
    <AvailabilityCard/>
  </Section>
  <Section
		id="subscription-2"
		className="bg-clouds-2 bg-cover bg-top"
	>
    <SubscriptionOptionsCard/>
  </Section>
</PageLayout>