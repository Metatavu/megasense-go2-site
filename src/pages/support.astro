---
import PageLayout from "@layouts/PageLayout.astro";
import Section from "@components/Section.astro";
import { Image } from "astro:assets";
import SectionTitle from "@components/SectionTitle.astro";
import ActionButton from "@components/ActionButton.astro";
import contactIcon from "@images/contact-icon.png";
import supportHeroSubpage from "@images/support-hero-subpage.png";
import FadeInAnimation from "@components/animations/FadeInAnimation.astro";

---

<PageLayout title="GO2 - Support">
  <Section
    id="support-page"
    className="bg-go2-blue-light pb-[0px]"
  >
	</Section>
  <Section
		id="support-start"
		className="bg-go2-blue-light"
	>
		<Image
			src={supportHeroSubpage}
			alt="Jigsaw pieces"
			class="w-full max-w-none max-h-hero-image sm:w-[500px] sm:mb-8"
		/>
		<h3 class="text-2xl">
			Support
		</h3>
		<div class="flex flex-col gap-4 sm:w-1/2">
			<p class="text-center">Ut enim ad minim veniam, quis nostrud. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquid.</p>
		</div>
	</Section>
  <Section
    id="customer-support"
    className="bg-white"
  >
    <SectionTitle
      title="Customer support"
      className="text-go2-blue"
    />
    <Image
      src={contactIcon}
      alt="Speech bubble"
      class="w-1/3 sm:w-1/6 xl:w-1/12 sm:mb-8"
    />
    <FadeInAnimation>
    <h3 class="text-2xl text-black text-center mb-5">
      How can we help you?
    </h3>
    <div class="flex flex-col gap-4 text-black text-center">
      <p>If you couldnâ€™t find an answer to your problem above, you can always contact us.</p>
    </div>
  </FadeInAnimation>
    <ActionButton
      title="Contact support"
    />
  </Section>
</PageLayout>