---
import PageLayout from "@layouts/PageLayout.astro";
import Section from "@components/Section.astro";
import { Image } from "astro:assets";
import pricingHero from "@images/pricing-hero.png";
import SubscriptionOptionsCard from "@components/SubscriptionOptionsCard.astro";
import SectionTitle from "@components/SectionTitle.astro";
import FadeInAnimation from "@components/animations/FadeInAnimation.astro";
import SupportButton from "@components/SupportButton.astro";
import contactIcon from "@images/contact-icon.png";

---

<PageLayout title="GO2 - Membership">
  <Section
    id="membership-page"
    className="bg-go2-blue-light pb-[0px]"
  >
	</Section>
  <Section
		id="membership"
		className="bg-go2-blue-light"
	>
		<Image
			src={pricingHero}
			alt="Bird with a key"
			class="w-full max-w-none max-h-hero-image sm:w-[500px] sm:mb-8"
		/>
		<h3 class="text-2xl">
			Membership
		</h3>
		<div class="flex flex-col gap-4 sm:w-1/2">
			<p class="text-center">Join the Movement</p>
			<p class="text-center">Three months free then £2.99 per month for everything</p>
		</div>
	</Section>
  <Section
    id="help"
    className="bg-white"
  >
    <SectionTitle
      title="Help"
      className="text-go2-blue"
    />
    <Image
      src={contactIcon}
      alt="Speech bubble"
      class="w-1/3 sm:w-1/6 xl:w-1/12 sm:mb-8"
    />
    <FadeInAnimation>
			<h3 class="text-2xl text-black text-center mb-5">
				How can we help you?
			</h3>
			<div class="flex flex-col gap-4 text-black text-center">
				<p>If you couldn’t find an answer to your problem above, you can always contact us.</p>
			</div>
		</FadeInAnimation>
			<SupportButton/>
  </Section>
  <Section
		id="subscription-2"
		className="bg-go2-blue-light"
	>
    <SubscriptionOptionsCard/>
  </Section>
</PageLayout>