---
import PageLayout from "@layouts/PageLayout.astro";
import Section from "@components/Section.astro";
import SectionTitle from "@components/SectionTitle.astro";
import { Image } from "astro:assets";
import exposureStatistics from "@images/exposure-statistics.png";
import featuresHero from "@images/features-hero.png";
import pollutants from "@images/square-pollutants.jpg"
import squareRouteFinding from "@images/square-route-finding.jpg"
import ReadMoreButtonAccordion from "@components/ReadMoreButtonAccordion.astro";
import FadeInAnimation from "@components/animations/FadeInAnimation.astro";

---

<PageLayout title="GO2 - Features">
  <Section id="features-page" className="bg-go2-blue-light pb-[0px]">
	</Section>
  <Section
		id="features-start"
		className="bg-go2-blue-light"
	>
		<Image
			src={featuresHero}
			alt="Birds, measurement dial, route planning"
			class="w-full max-w-none max-h-hero-image sm:w-[500px] sm:mb-8"
		/>
		<h3 class="text-2xl">
			Features
		</h3>
		<div class="flex flex-col gap-4 sm:w-1/2 items-center">
			<p>Air Pollution Map</p>
			<p>Exposure Record</p>
			<p>Healthy Navigation</p>
		</div>
	</Section>
	<Section id="air-quality-map">
		<SectionTitle title="Air pollution map"/>
    <div class="max-h-[50vh] overflow-hidden sm:w-1/2 xl:w-1/3 2xl:w-1/4">
      <Image
        src={pollutants}
        alt="Pollutants represented on a map"
        class="w-full max-w-none"
      />
    </div>
    <FadeInAnimation className="sm:w-1/2">
      <h3 class="text-2xl text-center mb-5">
        Today’s four pollutants
      </h3>
      <div class="flex flex-col gap-4 items-center">
        <p class="text-center">High resolution air pollution maps combining live traffic data and other  emissions with today’s weather forecasts.</p>
      </div>
    </FadeInAnimation>
    <ReadMoreButtonAccordion
      content="Lorem ipsum dolorem ipso facto. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquid."
      className="bg-transparent text-go2-blue border border-go2-blue"
    />
  </Section>
  <Section
    id="exposure-tracking"
    className="bg-go2-blue-light"
  >
    <SectionTitle title="exposure record"/>
    <div class="max-h-[50vh] overflow-hidden sm:w-1/2 xl:w-1/3 2xl:w-1/4">
      <Image
        src={exposureStatistics}
        alt="Exposure statistics dial"
      />
    </div>
    <FadeInAnimation>
      <h3 class="text-2xl text-center mb-5">
        Today in micrograms
      </h3>
      <div class="flex flex-col gap-4">
        <p class="text-center"> Exposure information based on location in the air pollution map.
        </p>
        <p class="text-center">
          Your daily routine recorded in micrograms of four air pollutants
          </p>
        <p class="text-center">
          Allowing you to take control of your exposure and change your daily & weekly routine and see the benefits.</p>
      </div>
    </FadeInAnimation>
    <ReadMoreButtonAccordion
      content="Lorem ipsum dolorem ipso facto. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquid."
      className="bg-transparent text-go2-blue border border-go2-blue"
    />
	</Section>
	<Section
		id="clean-routing"
		className="bg-white"
	>
		<SectionTitle
			title="healthy navigation"
			className="text-go2-blue"
		/>
    <div class="max-h-[50vh] overflow-hidden sm:w-1/2 xl:w-1/3 2xl:w-1/4">
      <Image
        src={squareRouteFinding}
        alt="Map with a route shown"
      />
    </div>
    <FadeInAnimation>
      <h3 class="text-2xl text-black text-center mb-5">
        Today’s cleanest route
      </h3>
      <div class="flex flex-col gap-4 text-black text-center">
        <p>Take the least polluted route for  walking, running or cycling, and  counteract the negative effects of air pollution exposure</p>
      </div>
    </FadeInAnimation>
		<ReadMoreButtonAccordion
      content="Lorem ipsum dolorem ipso facto. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquid."
      className="bg-transparent text-go2-blue border border-go2-blue"
    />
	</Section>
</PageLayout>