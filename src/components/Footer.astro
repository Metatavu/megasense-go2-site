---
import { Image } from "astro:assets";
import logo from "@images/go2-logo.svg";
import homeIconFooter from "@images/home-icon-footer.svg";
import featureIconFooter from "@images/feature-icon-footer.svg";
import healthIconFooter from "@images/health-icon-footer.svg";
import scienceIconFooter from "@images/science-icon-footer.svg";
import supportIconFooter from "@images/support-icon-footer.svg";
import infoIconFooter from "@images/info-icon-footer.svg";
import ActionButton from "./ActionButton.astro";
import downloadIcon from "@images/download-icon.svg";
import Section from "./Section.astro";


const navigationLinks = {
  "Home": {
    url: "/",
    icon: homeIconFooter,
    alt: "Home"
  },
  "Features": {
    url: "/features",
    icon: featureIconFooter,
    alt: "Features"
  },
  "Health and happiness": {
    url: "/health-and-happiness",
    icon: healthIconFooter,
    alt: "Health and happiness"
  },
  "Science": {
    url: "/science",
    icon: scienceIconFooter,
    alt: "Science"
  },
  "Pricing and availability": {
    url: "#pricing-and-availability",
    icon: infoIconFooter,
    alt: "Pricing and availability"
  },
  "Support": {
    url: "#support",
    icon: supportIconFooter,
    alt: "Support"
  }
};

const secondaryNavigationLinks = {
  "Privacy policy": {
    url: "#privacy-policy"
  },
  "About MegaSense": {
    url: "#about-megasense"
  }
}

---
<Section
  id="footer-section"
  className="bg-go2-blue-dark"
>
  <footer id="footer">
    <div class="justify-center mt-8 mb-10">
      <div class="flex flex-row justify-center mb-4">
        <img
          src={logo.src}
          alt="Go2 Logo"
        />
        <p class="w-1/3 text-xs text-go2-blue font-bold text-[10px] ml-1">Powered by MegaSense</p>
      </div>
      <p class="text-white text-center">Choose the air you breathe</p>
    </div>
    <nav class="group items-center">
      <ActionButton
        title="Download GO2"
        href=""
        icon={downloadIcon}
        className="justify-center text-md my-4"
      />
      { Object.entries(navigationLinks).map(([title, { url, icon, alt }]) =>
        <a href={url} class="px-6 py-3 flex flex-row justify-center text-white font-bold text-sm text-center">
          <Image
            src={icon}
            alt={alt}
          />
          <span class="mr-3 ml-1 pt-1">{title}</span>
        </a>
      )}
      <div class="my-8">
        { Object.entries(secondaryNavigationLinks).map(([title, { url }]) =>
          <a href={url} class="px-6 py-4 flex flex-row justify-center text-white font-bold text-sm">
            <span class="mr-2">{title}</span>
          </a>
        )}
      </div>
    </nav>
    <p class="text-center text-white text-xs">© 2023–now • MegaSense Oy</p>
  </footer>
</Section>
