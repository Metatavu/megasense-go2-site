---
import { Image } from "astro:assets";
import logo from "@images/go2-logo.svg";
import homeIconFooter from "@images/home-icon-footer.svg";
import featureIconFooter from "@images/feature-icon-footer.svg";
import healthIconFooter from "@images/health-icon-footer.svg";
import scienceIconFooter from "@images/science-icon-footer.svg";
import supportIconFooter from "@images/support-icon-footer.svg";
import infoIconFooter from "@images/info-icon-footer.svg";
import downloadIcon from "@images/download-icon.svg";
import Section from "./Section.astro";
import DownloadButton from "./DownloadButton.astro";

---

<Section
  id="footer-section"
  className="bg-go2-blue-dark"
>
  <footer id="footer">
    <div class="flex flex-col gap-4 justify-center mt-8 md:flex-row md:items-center md:justify-between md:w-full md:gap-10 xl:gap-20">
      <div class="flex flex-row justify-center">
        <img
          src={logo.src}
          alt="Go2 Logo"
        />
        <p class="w-1/3 text-xs text-go2-blue font-bold text-[10px] ml-1">Powered by MegaSense</p>
      </div>
      <p class="text-white text-center text-xs md:ml-6">Choose the air you breathe</p>
      <DownloadButton
        title="Download GO2"
        icon={downloadIcon}
        className="justify-center text-sm my-4 items-center py-2 xl:-mr-4"
      />
    </div>
    <nav class="md:flex xl:gap-20">
      <div>
        <a href="/" class="px-6 py-3 flex flex-row justify-center text-white font-bold text-sm text-center">
          <Image
            src={homeIconFooter}
            alt="Home"
          />
          <span class="mr-3 ml-1 pt-1">Home</span>
        </a>
        <a href="/features" class="px-6 py-3 flex flex-row justify-center text-white font-bold text-sm text-center">
          <Image
            src={featureIconFooter}
            alt="Features"
          />
          <span class="mr-3 ml-1 pt-1">Features</span>
        </a>
        <a href="/benefits" class="px-6 py-3 flex flex-row justify-center text-white font-bold text-sm text-center">
          <Image
            src={healthIconFooter}
            alt="Heart"
          />
          <span class="mr-3 ml-1 pt-1">Benefits</span>
        </a>
      </div>
      <div>
        <a href="/research" class="px-6 py-3 flex flex-row justify-center text-white font-bold text-sm text-center">
          <Image
            src={scienceIconFooter}
            alt="Science"
          />
          <span class="mr-3 ml-1 pt-1">Research</span>
        </a>
        <a href="/membership" class="px-6 py-3 flex flex-row justify-center text-white font-bold text-sm text-center">
          <Image
            src={infoIconFooter}
            alt="Test tube"
          />
          <span class="mr-3 ml-1 pt-1">Membership</span>
        </a>
        <a href="/news" class="px-6 py-3 flex flex-row justify-center text-white font-bold text-sm text-center">
          <Image
            src={supportIconFooter}
            alt="Question mark"
          />
          <span class="mr-3 ml-1 pt-1">News</span>
        </a>
      </div>
      <div class="my-8 md:my-0">
        <a href="/privacy-policy" class="px-6 py-3.5 flex flex-row justify-center text-white font-bold text-sm">
          <span class="mr-2 md:mr-0">Privacy policy</span>
        </a>
        <a href="/about-megasense" class="px-6 py-3.5 flex flex-row justify-center text-white font-bold text-sm">
          <span class="mr-2 md:mr-0">About MegaSense</span>
        </a>
      </div>
    </nav>
    <p class="text-center text-white text-xs md:mt-8 md:ml-8 xl:ml-12">© 2023–now • MegaSense Oy</p>
  </footer>
</Section>
