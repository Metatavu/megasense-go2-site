---
type Props = {
  className?: string;
  summary: string;
  content: string;
};

const { className, summary, content } = Astro.props;

---

<details
  class="bg-go2-blue-light pl-2 py-1 rounded-2xl text-sm w-11/12"
  class:list={[className]}
>
  <summary class="list-none font-bold">{summary}</summary>
  <p class="my-4">{content}</p>
</details>