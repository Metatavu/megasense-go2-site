---
type Props = {
  title: string;
  description: string;
  hasBackground?: boolean;
};

const { title, description, hasBackground } = Astro.props;
---

<div
  data-fade-in
  class="rounded-sm p-3 flex flex-col gap-3"
  class:list={[{ "shadow-md bg-white": hasBackground }]}
>
  <h3 class="text-lg font-bold">{title}</h3>
  <p class="text-lg">{description}</p>
</div>