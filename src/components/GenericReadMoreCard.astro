---
import { Image } from "astro:assets";
import SectionTitle from "./SectionTitle.astro";
import ReadMoreButtonAccordion from "./ReadMoreButtonAccordion.astro";
import ScrollInAnimation from "./animations/ScrollInAnimation.astro";

type Props = {
  sectionTitle: string;
  heading: string;
  content: string;
  readMoreContent: string;
  image: ImageMetadata;
  altText: string
};

const { sectionTitle, heading, content, readMoreContent, image, altText } = Astro.props;

---

<SectionTitle
  title={sectionTitle}
  className="text-go2-blue"
/>
<Image
  src={image}
  alt={altText}
  class="w-1/3 max-w-none sm:w-1/5 xl:w-1/12 sm:mb-8"
/>
<ScrollInAnimation className="sm:w-1/2">
  <h3 class="text-2xl text-black text-center mb-5">
    {heading}
  </h3>
  <div class="flex flex-col gap-4 text-black items-center text-center">
    <p>{content}</p>
  </div>
</ScrollInAnimation>
<ReadMoreButtonAccordion
  content={readMoreContent}
  className="bg-transparent text-go2-blue border border-go2-blue"
/>
